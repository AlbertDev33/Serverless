{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@main/*": [
        "main/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@create/*": [
        "create/*"
      ],
      "@disable/*": [
        "disable/*"
      ],
      "@update/*": [
        "update/*"
      ],
      "@list/*": [
        "list/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "package.json"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}